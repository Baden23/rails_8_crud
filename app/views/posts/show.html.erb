<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= button_to 'Delete Post', post_path(@post), method: :delete, confirm: 'Are you sure you want to delete this post?'  %>  |
<%= link_to 'Back', posts_path %> | 
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>

<%= link_to "Delete post with turbo method", post_path(@post), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
